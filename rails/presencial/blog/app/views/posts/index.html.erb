<div class="container">
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <h1>Top 10 Blogs</h1>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <table class="table">
        <thead>
          <tr>
            <th>Title</th>
            <th>Content</th>
            <th>Edit</th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td><%= link_to(post.title, new_post_comment_path(post)) %></td>
              <td><p><%= post.content %></p></td>
            <% if user_signed_in? && current_user == @post.user %>
              <td>
                <%= link_to("Delete", post_comment_path(@post, comment), remote: true, method: 'DELETE', class: 'delete_comment_link') %>
              </td>
            <% end %>

            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<div id="modal-window"></div>
