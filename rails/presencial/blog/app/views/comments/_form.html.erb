<h1>New Comment</h1>

<%= form_for @comment, url: post_comments_path(current_user), class: 'new_comment' do |f| %>
  <div class="field">
    <%= f.label :content, "Message" %><br>
    <%= f.text_area :content %>
  </div>
  <%= f.submit "Create Comment", :disable_with => 'Creating ...' %>
<% end %>

